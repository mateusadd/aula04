<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">

        <!-- para usar o bootstrap -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- -->

    </head>

    <body>
        <!-- div de conteúdo geral-->
        <div class="container">

            <!-- primeira camada (topo) -->
            <div class="row">
                <div class="col">
                    <h1>TITULO</h1>
                </div>
                <div class="col">
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary">Opção 1</button>
                        <button type="button" class="btn btn-primary">Opção 2</button>

                        <div class="btn-group">
                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">Opção 3<span class="caret"></span></button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#" class="btn btn-info">opção 3.1</a></li>
                                <li><a href="#" class="btn btn-info">opção 3.2</a></li>
                            </ul>
                        </div>

                    </div>
                </div>

            </div>

            <!-- segunda camada (conteudo) -->
            <div class="row">
                <div class="col">
                    <table cellspacing="0" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <td>Codigo</td>
                                <td>Nome</td>
                                <td>Opções</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Eduardo</td>
                                <td><a href="#" class="btn btn-warning">Alterar</a> <a href="#" class="btn btn-danger">X</a></td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Eder</td>
                                <td><a href="#" class="btn btn-warning">Alterar</a> <a href="#" class="btn btn-danger">X</a></td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>Rosangela</td>
                                <td><a href="#" class="btn btn-warning">Alterar</a> <a href="#" class="btn btn-danger">X</a></td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3">
                                    Total: 3 registros
                                </td>
                            </tr>
                        </tfoot>
                    </table>


                    <p class="alert alert-success">O Eduardo está nervozinho hoje</p>
                    <p class="alert alert-danger">O Eder roubou todos os cabos de rede</p>
                    <p class="alert alert-warning">A Rosangela tem uma irmã</p>

                </div>
            </div>

            <div class="row">
                <div class="col" style="align-items: center;">
                    <form id="frm" method="post" role="form">
                        <div class="form-group">
                            <label>Nome <input type="text" name="edtNome" class="form-control"> </label>
                        </div>
                        <div class="form-group">
                            <label>Idade <input type="text" name="edtIdade" class="form-control"></label>
                        </div>
                        <div class="form-group">
                            <label>Estado 
                                <select name="selUF" class="form-control">
                                    <option>PR</option>
                                    <option>SC</option>
                                    <option>RS</option>
                                </select>
                            </label>
                        </div>
                        <div class="radio">
                            <label><input type="radio" id="optRadio" onclick="mudar();">Normal </label>
                        </div>
                        <div class="radio">
                            <label><input type="radio" id="optRadio" onclick="mudar();">Cuidado </label>
                        </div>
                        <div class="radio">
                            <label><input type="radio" id="optRadio" onclick="mudar();">Perigo </label>
                        </div>
                        
                        <div class="form-group">
                            <input type="button" id="btnMudar" value="Mudar" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>




            <!-- terceira camada (rodape) -->
            <div class="row">
                <div class="col">
                    Clique <a href="localhost:3000" class="btn btn-warning">aqui</a> para voltar</a>
                </div>
                <div>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
                          Dropdown button
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                          <a class="dropdown-item" href="#">Action</a>
                          <a class="dropdown-item" href="#">Another action</a>
                          <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                      </div>
                </div>
            </div>

        </div>



        <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>

        <script>
            function mudar()
            {
                var radio = document.getElementById('optRadio')
                var qual = radio.options[radio.selectedIndex]
                if (qual == 0)
                {
                    document.getElementById('btnMudar').className = "btn btn-primary"
                }
                else if (qual == 1)
                {
                    document.getElementById('btnMudar').className = "btn btn-warning"
                }
                else 
                {
                    document.getElementById('btnMudar').className = "btn btn-danger"
                }
            }
        </script>


    </body>


</html>